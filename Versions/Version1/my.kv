<HomePage>:
    name: "Home Page"

    FloatLayout:

        Button:
            text: "Profile" 
            on_release: app.root.current = "Profile Page" if LoggedIn is True else "Login Page"
            pos_hint : {'x' : 0, 'top': 1}
            size_hint : 0.1, 0.1
        Label:
            text: "Search: "
            pos_hint : {'x' : 0.1, 'top': 1}
            size_hint: 0.15, 0.1
            font_size : 36
        TextInput: 
            placeholder: "Search Box"
            pos_hint : {'x': 0.25, 'top': 1}
            size_hint : 0.5, 0.1
            multiline : False
        Button: 
            text: "Search"
            pos_hint : {'x': 0.75, 'top': 1}
            size_hint : 0.1, 0.1
        Button: 
            text: "Menu"
            pos_hint : {'x': 0.9, 'top': 1}
            size_hint : 0.1, 0.1
        GridLayout:
            pos_hint : {'x': 0, 'top': 0.9}
            size_hint : 1, 0.8
            cols: 3
            Button:
                text: "Mobile Phone"
            Button:
                text: "Television"
            Button:
                text: "Laptop"

<MenuPage>:
        Grid
